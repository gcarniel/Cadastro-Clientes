<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#41414C" />
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/header.css">

    <title>Cadastro de Clientes</title>
</head>

<body>
    <div class="container">
        <%- include('parts/header', {title: 'Clientes' , button: '+ Cliente' , urlButton: '/novo' }) %>
    </div>

    <div class="client-list">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nome</th>
                    <th>Telefone</th>
                    <th>Ações</th>
                </tr>
            </thead>
            <tbody>
                <% clients.forEach(cliente=> { %>
                    <tr>
                        <td>
                            <%= cliente.id %>
                        </td>
                        <td>
                            <%= cliente.nome %>
                        </td>
                        <td>
                            <%= cliente.telefone %>
                        </td>
                        <td>
                            <a class="edit" href="/editar/<%= cliente.id %> " >
                                <img src="/images/edit.svg" alt="editar" />
                            </a>
                            <a href="/">
                                <img class="trash" src="/images/trash.svg" alt="delete" />
                            </a>
                        </td>
                    </tr>
                    <% }) %>
            </tbody>
        </table>
    </div>

</body>

</html>
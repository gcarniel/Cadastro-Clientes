<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#41414C" />
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/novo.css">
    <link rel="stylesheet" href="/styles/contato.css">
    <link rel="stylesheet" href="/styles/header.css">

    <title>Cadastro de Clientes</title>
</head>

<body>
    <div class="container">
        <%- include('parts/header', {title: 'Adicionar Contato' , hasBack: true , button: 'Home' , urlButton: '/' }) %>
    </div>

    <div class="client-list">
        <form id="form-client-contact" method="POST">
            <div class="client-contact">

                <div class="separator light"></div>
                <label for="tipo">Contatos</label>
                <select name="tipo-contact-editar" id="tipo-contact-editar">
                    <option value="">Selecione um contato para editá-lo</option>

                    <% dataContact.forEach( contact=> { %>
                        <option value="<%= contact.id%>">
                            <%=contact.ddd %>
                                <%=contact.numero %>
                        </option>
                        <% }) %>

                </select>

                <div class="inputs-contact">
                    <span>
                        <label for="tipo">Tipo</label>
                        <select name="tipo" id="tipo" required>
                            <option value=""></option>
                            <option value="comercial">Comercial</option>
                            <option value="correspondencia">Correspondência</option>
                            <option value="residencial">Residencial</option>
                        </select>
                    </span>
                    <span>
                        <label for="ddd">DDD</label>
                        <input type="text" id="ddd" name="ddd" maxlength="2" />
                    </span>
                    <span>
                        <label for="numero">Número</label>
                        <input type="text" id="numero" name="numero" maxlength="10" />
                    </span>
                </div>

            </div>
            <div class="separator light"></div>
            <button id="save-new-contact" type="submit" form="form-client-contact">Gravar</button>
        </form>

        <script src="/scripts/contatos.js"></script>
</body>

</html>
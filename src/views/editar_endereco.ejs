<!DOCTYPE html>
<html lang="pt-BR">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="theme-color" content="#41414C" />
    <link rel="stylesheet" href="/styles/global.css">
    <link rel="stylesheet" href="/styles/header.css">
    <link rel="stylesheet" href="/styles/index.css">
    <link rel="stylesheet" href="/styles/redes.css">
    <link rel="stylesheet" href="/styles/novo.css">
    <link rel="stylesheet" href="/styles/endereco.css">

    <title>Cadastro de Clientes</title>
</head>

<body>
    <div class="container">
        <%- include('parts/header', {title: 'Endereços' , hasBack: true, button: 'Home' , urlButton: '/' }); %>
    </div>

    <div class="client-list">
        <form id="form-client-address" method="POST">
            <div class="client-address">

                <div class="separator light"></div>
                <div class="inputs-address">
                    <span>
                        <label for="tipo">Tipo</label>
                        <select name="tipo" id="tipo" required>
                            <option value=""></option>
                            <option value="comercial">Comercial</option>
                            <option value="correspondencia">Correspondência</option>
                            <option value="residencial">Residencial</option>
                        </select>
                    </span>
                    <span>
                        <label for="rua">Rua</label>
                        <input type="text" id="rua" name="rua" />
                    </span>
                    <span>
                        <label for="numero">Número</label>
                        <input type="text" id="numero" name="numero" />
                    </span>
                </div>

                <div class="inputs-address">
                    <span>
                        <label for="bairro">Bairro</label>
                        <input type="text" id="bairro" name="bairro" />
                    </span>
                    <span>
                        <label for="cidade">Cidade</label>
                        <input type="text" id="cidade" name="cidade" />
                    </span>
                    <span>
                        <label for="cep">CEP</label>
                        <input type="text" id="cep" name="cep" />
                    </span>
                    <input type="text" name="id-endereco" id="id-endereco">
                </div>
            </div>
            <div class="separator light"></div>
            <button id="save-new-address" type="submit" form="form-client-address">Gravar</button>
            <button data-aux="new-reg" type="button">Novo</button>

        </form>
            <div class="table-aux">
                <table>
                    <thead>
                        <tr>
                            <th>ID</th>
                            <th>Tipo</th>
                            <th>Rua</th>
                            <th>Número</th>
                            <th class="hidden" >Bairro</th>
                            <th>Cidade</th>
                            <th class="hidden" >CEP</th>
                        </tr>
                    </thead>
                    <tbody>
                        <% dataAddress.forEach( address => { %>
                            <tr data-aux="row">
                                <td data-aux="id">
                                    <%=address.id%>
                                </td>
                                <td data-aux="tipo">
                                    <%=address.tipo%>
                                </td>
                                <td data-aux="rua">
                                    <%=address.rua%>
                                </td>
                                <td data-aux="numero">
                                    <%=address.numero%>
                                </td>
                                <td  class="hidden" data-aux="bairro">
                                    <%=address.bairro%>
                                </td>
                                <td data-aux="cidade">
                                    <%=address.cidade%>
                                </td>
                                <td  class="hidden" data-aux="cep">
                                    <%=address.cep%>
                                </td>
                            </tr>
                        <% }) %>
                        </tbody>
                    </table>
            </div>
        <div class="separator light"></div>
    </div>
    <script src="/scripts/enderecos.js"></script>
</body>

</html>